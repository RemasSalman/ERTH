<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="432dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="left"
            android:paddingTop="120dp"
            android:paddingBottom="100dp"
            android:text="     Join Us:\n\     Pick Your Role"
            android:textColor="#97857B"
            android:textSize="32dp"/>

        <Button
            android:id="@+id/researchersButton"
            android:layout_width="320dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:backgroundTint="#D8BF9C8B"
            android:fontFamily="serif"
            android:text="RESEARCHER"
            android:textSize="25dp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/universitiesButton"
            android:layout_width="320dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#D8BF9C8B"
            android:fontFamily="serif"
            android:textSize="25dp"
            app:cornerRadius="10dp"
            android:text="UNIVERSITIE"
            />


        <Button
            android:id="@+id/individualsButton"
            android:layout_width="320dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#D8BF9C8B"
            android:fontFamily="serif"
            android:text="INDIVIDUAL"
            android:textSize="25dp"
            app:cornerRadius="10dp" />

    </LinearLayout>
</FrameLayout>